# SmartSeller Backend Environment Configuration

# Application Configuration
APP_ENV=development
APP_VERSION=1.0.0
PORT=8080

# URLs
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=

# Database Configuration
DATABASE_URL=postgres://username:password@localhost:5432/smartseller_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=username
DB_PASSWORD=password
DB_NAME=smartseller_db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=300

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:5173/auth/callback

# Session Configuration
SESSION_KEY=your_session_secret_key_32_chars_min
SESSION_MAX_AGE=86400
SESSION_SECURE=false
SESSION_DOMAIN=
SESSION_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_EXPIRATION_TTL=3600

# Email Configuration (Mailgun)
MAILGUN_DOMAIN=your_domain.com
MAILGUN_API_KEY=your_mailgun_api_key
SMTP_FROM_NAME=SmartSeller Team
SMTP_FROM_EMAIL=noreply@your_domain.com

# Configuration Directory
CONFIG_DIR=./internal/config

# Monitoring and Logging (Optional)
LOKI_URL=
LOKI_USERNAME=
LOKI_PASSWORD=
LOKI_ENABLED=false
LOKI_BATCH_SIZE=100
LOKI_BATCH_WAIT=1s
LOKI_LABELS=service=smartseller-backend,environment=development

# Elasticsearch Configuration (Optional)
ELASTIC_URL=
ELASTIC_USERNAME=
ELASTIC_PASSWORD=
LOGSTASH_HOST=
KIBANA_HOST=

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
