# SmartSeller Backend Environment Configuration

# Application Configuration
APP_ENV=development
APP_VERSION=1.0.0
PORT=8090

# URLs
BASE_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FILE=

# Database Configuration
DATABASE_URL=postgres://smartseller_user:smartseller_pass@localhost:5432/smartseller_db?sslmode=disable
DB_HOST=localhost
DB_PORT=5432
DB_USER=smartseller_user
DB_PASSWORD=smartseller_pass
DB_NAME=smartseller_db
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_CONN_MAX_LIFETIME=300

# Google OAuth Configuration (Optional for testing)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:5173/auth/callback

# Session Configuration
SESSION_KEY=smartseller_super_secret_session_key_min_32_chars
SESSION_MAX_AGE=86400
SESSION_SECURE=false
SESSION_DOMAIN=
SESSION_SAME_SITE=lax

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_EXPIRATION_TTL=3600

# Email Configuration (Optional for testing)
MAILGUN_DOMAIN=
MAILGUN_API_KEY=
SMTP_FROM_NAME=SmartSeller Team
SMTP_FROM_EMAIL=noreply@smartseller.com

# Payment Configuration (DurianPay - dummy values for development)
DURIANPAY_API_KEY=dummy-api-key-for-development
DURIANPAY_BASE_URL=https://api.durianpay.id
DURIANPAY_CALLBACK_URL=http://localhost:8080/api/v1/payments/durianpay/callback
DURIANPAY_CLIENT_KEY=dummy-client-key
DURIANPAY_CLIENT_SECRET=dummy-client-secret
DURIANPAY_MERCHANT_ID=dummy-merchant-id
DURIANPAY_PRIVATE_KEY=dummy-private-key

# Configuration Directory
CONFIG_DIR=./internal/config

# Monitoring and Logging (Optional)
LOKI_URL=
LOKI_USERNAME=
LOKI_PASSWORD=
LOKI_ENABLED=false
LOKI_BATCH_SIZE=100
LOKI_BATCH_WAIT=1s
LOKI_LABELS=service=smartseller-backend,environment=development

# Elasticsearch Configuration (Optional)
ELASTIC_URL=
ELASTIC_USERNAME=
ELASTIC_PASSWORD=
LOGSTASH_HOST=
KIBANA_HOST=

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
